<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity">

    <Button
            android:text="Play Again"
            android:layout_width="128dp"
            android:layout_height="70dp"
            android:id="@+id/button"
            android:onClick="reset"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="76dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="302dp" android:layout_marginEnd="301dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="359dp"
            android:layout_height="70dp"
            android:id="@+id/textView" android:textSize="36sp" android:textColor="@android:color/black"
            android:text="your score: 556"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="247dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="7dp" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="8dp" android:textStyle="bold"/>
    <TextView
            android:text="High Score"
            android:layout_width="359dp"
            android:layout_height="70dp"
            android:id="@+id/textView3"
            android:textColor="@android:color/black"
            android:textSize="36sp" android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp" app:layout_constraintEnd_toStartOf="@+id/textView"
            android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="247dp"/>
</android.support.constraint.ConstraintLayout>