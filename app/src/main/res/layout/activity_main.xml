<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <TextView
            android:text="Timer : 10"
            android:layout_width="217dp"
            android:layout_height="58dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView1" android:layout_marginTop="52dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="30sp" android:textAlignment="center"
            android:textColor="@android:color/black" app:layout_constraintEnd_toStartOf="@+id/textView2"
            android:layout_marginEnd="16dp"/>
    <android.support.v7.widget.GridLayout
            android:layout_width="395dp"
            android:layout_height="494dp"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView1"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="40dp"
            app:layout_constraintHorizontal_bias="0.59" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textView1" app:layout_constraintVertical_bias="0.388"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp">


        <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp" app:srcCompat="@drawable/kenny" app:layout_row="0"
                app:layout_column="0" android:id="@+id/imageView1" android:contentDescription="TODO"
                android:onClick="press"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp" app:srcCompat="@drawable/kenny" app:layout_row="0"
                app:layout_column="1" android:id="@+id/imageView2" android:onClick="press"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp" app:srcCompat="@drawable/kenny" app:layout_row="0"
                app:layout_column="2" android:id="@+id/imageView3" android:onClick="press"/>

        <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp" app:srcCompat="@drawable/kenny" app:layout_row="1"
                app:layout_column="0" android:id="@+id/imageView4" android:onClick="press"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp" app:srcCompat="@drawable/kenny" app:layout_row="1"
                app:layout_column="1" android:id="@+id/imageView5" android:onClick="press"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp" app:srcCompat="@drawable/kenny" app:layout_row="1"
                app:layout_column="2" android:id="@+id/imageView6" android:onClick="press"/>

        <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp" app:srcCompat="@drawable/kenny" app:layout_row="2"
                app:layout_column="0" android:id="@+id/imageView7" android:onClick="press"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp" app:srcCompat="@drawable/kenny" app:layout_row="2"
                app:layout_column="1" android:id="@+id/imageView8" android:onClick="press"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp" app:srcCompat="@drawable/kenny" app:layout_row="2"
                app:layout_column="2" android:id="@+id/imageView9" android:onClick="press"/>
    </android.support.v7.widget.GridLayout>
    <TextView
            android:text="Score : 0"
            android:layout_width="158dp"
            android:layout_height="57dp"
            android:id="@+id/textView2" android:textSize="30sp"
            android:onClick="press" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView1" app:layout_constraintBottom_toBottomOf="@+id/textView1"
            app:layout_constraintVertical_bias="0.0" android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/textView1" android:layout_marginStart="16dp"/>
</android.support.constraint.ConstraintLayout>