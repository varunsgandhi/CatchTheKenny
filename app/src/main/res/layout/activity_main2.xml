<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity">

    <Button
            android:text="Play Again"
            android:layout_width="134dp"
            android:layout_height="60dp"
            android:id="@+id/button"
            android:onClick="reset"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="156dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.537"
            android:textColor="@android:color/black" android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
            android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:layout_width="353dp"
            android:layout_height="84dp"
            android:id="@+id/textView" android:textSize="36sp" android:textColor="@android:color/black"
            android:text="your score: 556"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:textStyle="bold"/>
    <TextView
            android:text="High Score"
            android:layout_width="336dp"
            android:layout_height="72dp"
            android:id="@+id/textView3"
            android:textColor="@android:color/black"
            android:textSize="36sp" android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/textView" app:layout_constraintEnd_toEndOf="@+id/textView"
            android:layout_marginTop="148dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.434"/>
</android.support.constraint.ConstraintLayout>